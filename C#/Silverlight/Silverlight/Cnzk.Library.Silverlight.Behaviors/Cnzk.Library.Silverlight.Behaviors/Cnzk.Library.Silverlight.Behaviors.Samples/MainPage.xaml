        <ScrollViewer ToolTipService.ToolTip="ScrollViewer with horizontal StackPanel inside." Margin="10,210,10,10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <i:Interaction.Behaviors>
                <behaviors:MouseWheelScrollBehavior />
            </i:Interaction.Behaviors>
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <Rectangle Fill="Beige" Width="100" Margin="5" />
                <Rectangle Fill="Red" Width="100" Margin="5" />
                <Rectangle Fill="Blue" Width="100" Margin="5" />
