<UserControl x:Class="Five.View.Components.StasticsPanelComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Component="clr-namespace:Five.View.Components">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="80" />
        </Grid.ColumnDefinitions>
        
        <Component:BlackPieceComponent Grid.Column="0" Grid.Row="0" />
        <Component:WhitePieceComponent Grid.Column="0" Grid.Row="1" />
        
        <TextBlock x:Name="BlackWonTextBlock" Grid.Column="1" Grid.Row="0" FontSize="18" VerticalAlignment="Center" Text="Black wons: " />
        <TextBlock x:Name="WhiteWonTextBlock" Grid.Column="1" Grid.Row="1" FontSize="18" VerticalAlignment="Center" Text="White wons: " />
    </Grid>
</UserControl>
