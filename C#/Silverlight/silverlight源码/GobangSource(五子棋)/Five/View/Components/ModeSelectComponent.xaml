<UserControl x:Class="Five.View.Components.ModeSelectComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="344" Height="280"
    Clip="F1 M 0,0L 344,0L 344,280L 0,280L 0,0">
    <Canvas>
        <Image x:Name="Image" Source="ModeSelectComponent_files/image0.png" Width="343" Height="278" Canvas.Left="1.04" Canvas.Top="0.920013"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="343">
            <TextBlock x:Name="TextBlock" FontFamily="Arial Black" FontSize="28" Text="Select Model" Foreground="#FF000000" HorizontalAlignment="Center" Margin="0,35,0,0" />
            <Button x:Name="PVPButton" Content="Player vs Player" Style="{StaticResource RestartButton}" Margin="0,18,0,0" />
            <Button x:Name="PVEButton" Content="Player vs Computer" Style="{StaticResource RestartButton}" Margin="0,18,0,0"  />
            <Button x:Name="EVPButton" Content="Computer vs Player" Style="{StaticResource RestartButton}" Margin="0,18,0,0"  />
        </StackPanel>
    </Canvas>
</UserControl>
