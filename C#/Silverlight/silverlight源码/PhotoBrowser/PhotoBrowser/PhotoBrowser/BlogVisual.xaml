<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="400" Height="400"
      x:Class="PhotoBrowser.BlogVisual" Background="DarkBlue" BorderBrush="DarkBlue" BorderThickness="4,4,4,4">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="0.9*" />
      <RowDefinition Height="AUTO" />
    </Grid.RowDefinitions>

    <TextBox Grid.Row="0" AcceptsReturn="True" TextWrapping="Wrap" Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="textBox"/>
    <Button Grid.Row="1" HorizontalAlignment="Right" x:Name="submitButton">Submit</Button>
  </Grid>
</Border>