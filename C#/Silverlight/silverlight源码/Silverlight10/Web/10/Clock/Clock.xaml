<Canvas
	xmlns="http://schemas.microsoft.com/client/2007"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="180" Height="150"
	Background="#0030628D"
	x:Name="Page" Loaded="enableClock"
	>
