            <StackPanel x:Name="spNUD" Grid.Row="1" Grid.Column="0" />
            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource Description}" Text="TUD : UpDownBase&lt;DateTime&gt;"/>
