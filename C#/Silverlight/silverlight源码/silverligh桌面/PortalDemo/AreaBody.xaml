<UserControl x:Class="PortalDemo.AreaBody"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="LayoutRoot" Loaded="LayoutRoot_Loaded">
        <ListBox x:Name="lstInformation" BorderThickness="0" SelectionChanged="lstInformation_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Padding="5,0,5,0" Text="{Binding Path=Title}" Height="20"/>
                        <TextBlock Padding="5,0,5,0" Text="{Binding Path=Href}" Visibility="Collapsed"/>
                        <TextBlock Padding="5,0,5,0" Text="{Binding Path=State}" Visibility="Collapsed"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
