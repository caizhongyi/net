<UserControl x:Class="PortalDemo.AreaHead"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="30">
    <Grid x:Name="LayoutRoot" Cursor="Hand">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="30px"></ColumnDefinition>
            <ColumnDefinition Width="30px"></ColumnDefinition>
            <ColumnDefinition Width="30px"></ColumnDefinition>
            <ColumnDefinition Width="5px"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtTitle" Text="区域标题" Grid.Column="0" TextAlignment="Center" FontSize="18"></TextBlock>
        <Button x:Name="btnRefresh" Content="刷新" Grid.Column="1"></Button>
        <Button x:Name="btnCollapse" Content="收起" Grid.Column="2"></Button>
        <Button x:Name="btnExpand" Content="展开" Grid.Column="2" Visibility="Collapsed"></Button>
        <Button x:Name="btnClose" Content="关闭" Grid.Column="3"></Button>
    </Grid>
</UserControl>