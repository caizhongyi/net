<UserControl x:Class="YYFly.Controls.Sound"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="0" Height="0">
    <Grid x:Name="LayoutRoot" Background="White">
        
        <!--开枪的声音-->
        <MediaElement x:Name="bomb" Source="/YYFly;component/Resource/Bomb.mp3" AutoPlay="False" />
        
        <!--背景音乐-->
        <MediaElement x:Name="background" Source="/YYFly;component/Resource/Background.mp3" AutoPlay="True" MediaEnded="background_MediaEnded"  />
        
    </Grid>
</UserControl>
